@model QuoteMyGoods.Models.Product

@{ 
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>

<div class="row">
    <div>@await Component.InvokeAsync("ProductDelete",new { product = Model })</div>
</div>

<form asp-controller="Products" asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <div class="form-actions">
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="Products">Back to List</a>
    </div>
</form>

