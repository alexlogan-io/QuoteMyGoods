@model QuoteMyGoods.Common.BasketItem


<div class="col-md-3">
    @Model.GetProduct().Name
</div>
<div class="col-md-3">
    @Model.GetProduct().Category
</div>
<div class="col-md-2">
    @Model.GetTotalPrice()
</div>
<div class="col-md-2">
    <div class="col-md-4">
        <form asp-controller="Basket" asp-action="MinusQuantity" method="post" asp-route-id="@Model.GetProduct().Id">
            <button type="submit" class="btn btn-sm"><i class="fa fa-minus"></i></button>
        </form>
    </div>
    <div class="col-md-4 text-center">
        @Model.GetQuantity()
    </div>
    <div class="col-md-4">
        <form asp-controller="Basket" asp-action="AddQuantity" method="post" asp-route-id="@Model.GetProduct().Id">
            <button type="submit" class="btn btn-sm"><i class="fa fa-plus"></i></button>
        </form>
    </div>
</div>
<div class="col-md-2">
    <form asp-controller="Basket" asp-action="RemoveFromBasket" method="post" asp-route-id="@Model.GetProduct().Id">
        <button type="submit" class="btn btn-default"><i class="fa fa-close"></i></button>
    </form>
</div>

