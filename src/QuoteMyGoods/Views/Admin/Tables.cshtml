@using Microsoft.WindowsAzure.Storage.Table

@model IEnumerable<TableEntity>

<div class="row">
    <form asp-controller="Admin" asp-action="Tables" method="get">
        <div class="col-md-5">
            <div class="form-group">
                <label for="orderbyList">Partition: </label>
                <input id="partition" name="partition" type="text" />
            </div>
            <div class="form-group">
                <input type="submit" value="Filter" class="btn btn-success" />
            </div>
        </div>
    </form>
</div>

<table class="table">
    <tr>
        <th>
            Partition
        </th>
        <th>
            Row
        </th>
        <th>
            Other
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PartitionKey)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RowKey)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item)
            </td>
        </tr>
    }
</table>